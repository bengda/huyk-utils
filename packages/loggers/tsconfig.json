{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2015",
    "ignoreDeprecations": "5.0",
    "allowJs": true,
    "moduleResolution": "Bundler",
    "declaration": true,
    "sourceMap": false,
    "declarationMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom"],
    "strictPropertyInitialization": false,
    "outDir": "lib"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
}
